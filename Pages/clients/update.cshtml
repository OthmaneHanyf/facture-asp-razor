@page
@model facture.Pages.clients.updateModel
@{
}

<br>
<h2 class="text-info">Modifier Client</h2>
<br>

<div class="border p-5 container">
    <form method="post">
        <input type="hidden" asp-for="client.id" />
        <div class="text-danger" asp-validation-summary="ModelOnly" ></div>
        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Raison Sociale</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.raisonSociale" />
                    </div>
                    <div class="mt-1 col-12">
                        <span class="text-danger" asp-validation-for="client.raisonSociale" ></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>IF Client</label>
                    </div>
                    <div class="col-6">
                        <input maxlength="8" class="form-control" asp-for="client.idFiscal" />
                    </div>
                    <div class="mt-1 col-12">
                        <span class="text-danger" asp-validation-for="client.idFiscal" ></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Type de societe</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.typeSociete" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Nom</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.nom" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Prenom</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.prenom" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Email</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" type="email" asp-for="client.email" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Tel</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.tel" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Adresse</label>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control" asp-for="client.adresse" ></textarea>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group row">
                    <div class="col-4">
                        <label >ICE</label>
                    </div>
                    <div class="col-6">
                        <input minlength="15" maxlength="15" class="form-control" asp-for="client.idCommunEntreprise" />
                    </div>
                    <div class="mt-1 col-12">
                        <span class="text-danger" asp-validation-for="client.idCommunEntreprise" ></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label >Registre de Commerce</label>
                    </div>
                    <div class="col-6">
                        <input maxlength="5" class="form-control" asp-for="client.registreCommerce" />
                    </div>
                    <div class="mt-1 col-12">
                        <span class="text-danger" asp-validation-for="client.registreCommerce" ></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label >Nom du Responsable</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.nomRespo" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label >Patente</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.patente" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label >Ville</label>
                    </div>
                    <div class="col-6">
                        <select class="form-control" asp-for="client.ville" >
                            <option value="rabet">Rabat</option>
                            <option value="kenitra">Kenitra</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label >Pays</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.pays" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Fax</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.fax" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Portable</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control" asp-for="client.portable" />
                    </div>
                </div>
            </div>
            <div class="col-12 mt-4">
                <div class="form-group row text-center">
                    <div class="col-3 offset-3">
                        <input type="submit" value="Modifier" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-3">
                        <a asp-page="index" class="btn btn-danger form-control" >Annuler</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}